<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    tools:context=".SportsCarListActivity" >

    <TextView
        android:id="@+id/manufacturerModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/origin"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/hello_world"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/disclosure"
        android:ellipsize="none"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:singleLine="true"
        android:text="@string/hello_world"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/disclosure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/std_picture"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_arrow" />

</RelativeLayout>